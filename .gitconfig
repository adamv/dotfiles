[user]
  name = Adam Vandenberg
  email = flangy@gmail.com

[color]
  ui = auto

[alias]
  b    = checkout -b
  lg   = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  pick = cherry-pick -s
  sb   = status -sb
  wip  = commit -a -m 'wip'

[push]
  default = current

[core]
  excludesfile = ~/.gitignore

