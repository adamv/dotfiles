#!/bin/bash
       RED="\033[0;31m"
      PINK="\033[1;31m"
    YELLOW="\033[1;33m"
     GREEN="\033[0;32m"
  LT_GREEN="\033[1;32m"
      BLUE="\033[0;34m"
     WHITE="\033[1;37m"
    PURPLE="\033[1;35m"
      CYAN="\033[1;36m"      
COLOR_NONE="\033[0m"

_not_found() {
	echo -e "${RED}No $1${COLOR_NONE}"
}

echo

echo "Langauges"
echo "---------"
(which python && python --version) || _not_found "Python"
(which ruby && ruby --version) || _not_found "Ruby"
echo

echo "Source Control Systems"
echo "----------------------"
which git || _not_found "Git"
which svn  || _not_found "Subversiond "
which hg || _not_found "Mercurial"
which bzr || _not_found "Bazaar"
echo

echo "Utilities"
echo "---------"
which brew || _not_found "Brew"
which mate || _not_found "mate"
which resty
echo
